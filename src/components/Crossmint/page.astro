---
import Layout from '../../layouts/Layout.astro';
import CrossmintPayButton from '../../components/Crossmint/PayButton';
import AuthGuard from '../../components/AuthGuard';
import { Icon } from 'astro-icon/components';
---
<Layout title="NFT Minting">
  <AuthGuard client:load>
    <section class="relative flex items-center justify-center overflow-hidden py-12 sm:py-16 md:py-20">
      <div class="relative mt-10 bg-black/50 rounded-xl">
        <div class="w-full max-w-lg mx-auto bg-black/40 backdrop-blur-md rounded-xl border border-purple-500/20">
          <div class="p-8">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-4xl font-bold text-white">NFT</h3>
              <Icon name="mdi:nfc-variant" class="w-8 h-8 text-purple-400/80" />
            </div>
            <p class="text-gray-400 text-lg mb-8">
              Receive a unique NFT to commemorate your participation in HackReality 2024
            </p>
            <div class="space-y-4 items-center">
              <div class="space-y-2 recipient-container relative">
                <label for="recipient" class="text-sm font-medium text-purple-300">
                  Wallet Address or Email
                </label>
                <input
                  type="text"
                  id="recipient"
                  autocomplete="off"
                  class="w-full h-12 bg-black/60 border border-purple-500/30 rounded-lg px-4 text-white placeholder-gray-500 focus:outline-none focus:border-purple-500/50 hover:border-purple-500/40 transition-colors"
                  placeholder="Enter your wallet address or email"
                />
              </div>
              <div class="flex justify-center">
                <CrossmintPayButton client:only="react" />
              </div>  
           </div>
          </div>
        </div>
      </div>
    </section>
  </AuthGuard>
</Layout>

<script>
  // Deshabilitar el autocompletado del navegador
  const input = document.getElementById('recipient') as HTMLInputElement;
  if (input) {
    input.setAttribute('autocomplete', 'off');
  }
</script>