---
import { Icon } from 'astro-icon/components';

const features = [
  {
    icon: 'mdi:virtual-reality',
    title: 'Spatial Computing',
    description: 'Explora las posibilidades infinitas de la computación espacial y la realidad mixta.'
  },
  {
    icon: 'mdi:brain',
    title: 'IA Avanzada',
    description: 'Integra inteligencia artificial de vanguardia en tus proyectos espaciales.'
  },
  {
    icon: 'mdi:hand-front-right',
    title: 'Interacción Natural',
    description: 'Desarrolla interfaces intuitivas utilizando gestos, voz y seguimiento ocular.'
  },
  {
    icon: 'mdi:account-group',
    title: 'Colaboración en Tiempo Real',
    description: 'Crea experiencias multiusuario en entornos virtuales compartidos.'
  }
];
---

<section id="features" class="py-20 bg-gradient-to-b from-black to-purple-900">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12 text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-purple-500">
      Características del Hackathon
    </h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {features.map((feature) => (
        <div class="bg-black/50 backdrop-blur-sm rounded-xl p-6 border border-purple-500/20 hover:border-purple-500/40 transition-all hover:transform hover:scale-105">
          <Icon name={feature.icon} class="w-12 h-12 text-green-400 mb-4" />
          <h3 class="text-xl font-semibold mb-2 text-purple-200">{feature.title}</h3>
          <p class="text-gray-400">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>