---
import { Image } from 'astro:assets';
const partners = [
  { 
    name: '42 Málaga Fundación Telefónica', 
    logo: '/Sponsors/Untitled-1-02.png',
    dimensions: {
      width: 300,
      height: 100
    }
  },
  { 
    name: 'Crossmint', 
    logo: '/Sponsors/crosmint white.png',
    dimensions: {
      width: 250,
      height: 100
    }
  }
];
---
<section id="partners" class="py-12 sm:py-16 md:py-20 bg-gradient-to-b from-purple-900/50 to-black/50">
  <div class="container mx-auto px-4">
    <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-center mb-8 sm:mb-12 text-green-400">
      Sponsors
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6 md:gap-8 justify-items-center max-w-4xl mx-auto">
      {partners.map((partner) => (
        <div class="w-full h-[150px] sm:h-[175px] md:h-[200px] flex items-center justify-center p-4 bg-black/70 backdrop-blur-sm rounded-lg border border-purple-500/40 hover:border-purple-500/80 transition-all hover:transform hover:scale-105">
          <Image
            src={partner.logo}
            alt={partner.name}
            width={partner.dimensions.width}
            height={partner.dimensions.height}
            class="max-w-full max-h-full w-auto h-auto object-contain"
          />
        </div>
      ))}
    </div>
  </div>
</section>

