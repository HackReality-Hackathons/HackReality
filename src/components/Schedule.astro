---
import ScheduleComponent from './Schedule';
import type { ScheduleItem } from './Schedule';

const scheduleData: ScheduleItem[] = [
  { time: '17:00', title: 'Bienvenida e Introducción', type: 'event', url: '/evento/bienvenida' },
  { time: '18:00', title: 'Keynote: El Futuro del Spatial Computing', type: 'talk', url: '/charla/keynote' },
  { time: '19:30', title: 'Taller: Introducción a Unity XR', type: 'workshop', url: '/taller/unity-xr' },
  { time: '21:00', title: 'Cena y Networking', type: 'break', url: '/evento/cena' },
  { time: '22:00', title: 'Panel: Desafíos en IA para Spatial Computing', type: 'talk', url: '/charla/panel-ia' },
  { time: '23:30', title: 'Taller: Diseño de Interfaces para AR', type: 'workshop', url: '/taller/interfaces-ar' },
  { time: '01:00', title: 'Cierre del Primer Día', type: 'event', url: '/evento/cierre' },
];

const registrationEndDate = '2024-12-13T17:00:00';
---
<section id="schedule" class="py-20 bg-gradient-to-b from-purple-900 to-black">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12 text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-purple-500">
      Horario del Evento
    </h2>
    <ScheduleComponent client:load initialSchedule={scheduleData} registrationEndDate={registrationEndDate} />
  </div>
</section>

